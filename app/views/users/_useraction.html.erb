<h1>user action</h1>
<% if current_user.friend_request_pending_from?(user)%>
<%= form_with url:user_session_path(user),method: :patch do |f|%>
<%= f.submit 'accept request'%>
<% end %>
<%= form_with url:user_session_path(user),method: :delete do |f|%>
<%= f.submit 'decline request'%>
<% end%>
<%end%>

<% if current_user.friend_request_pending_to?(user) %>
  <%= form_with url: user_session_path(user), method: :delete do |f| %>
    <%= f.submit 'Cancel request' %>
  <% end %>
<% end %>

<% if current_user.friend?(user) %>
  <%= form_with url: user_session_path(user), method: :delete do |form| %>
    <%= form.submit 'Remove friend' %>
  <% end %>
<% end %>

<% if current_user.no_relation?(user) && current_user!=user %>
<%= form_with url: user_session_path(user) do |f|%>
<%= f.submit 'Invite'%>
<%end%>
<%end%>


